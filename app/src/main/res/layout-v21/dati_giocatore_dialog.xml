<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:transitionName="@string/transName"
            android:id="@+id/userDialogImage" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userDialogName"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:textSize="@dimen/list_text_size"
            style="?attr/primaryTextStyle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userDialogPunteggio"
            android:textSize="@dimen/list_text_size"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            style="?attr/primaryTextStyle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userDialogIscritto"
            android:textSize="@dimen/list_text_size"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            style="?attr/secondaryTextStyle" />
    </LinearLayout>

</LinearLayout>