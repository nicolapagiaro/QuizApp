<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/layoutBg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chart_list_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/circle_number"
            android:layout_width="@dimen/chart_icon_dimens"
            android:layout_height="@dimen/chart_icon_dimens"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/imageDescr"
            android:src="@drawable/circle_other" />

        <TextView
            android:id="@+id/numero"
            android:layout_width="@dimen/chart_icon_dimens"
            android:layout_height="@dimen/chart_icon_dimens"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/list_text_left_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/list_text_left_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeGiocatore"
                style="?attr/primaryTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_text_size" />

            <TextView
                android:id="@+id/punteggioGiocatore"
                style="?attr/primaryTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_text_size2" />

            <TextView
                android:id="@+id/usernameGiocatore"
                style="?attr/primaryTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_text_size2" />

        </LinearLayout>

    </RelativeLayout>

    <View
        style="?attr/dividerStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/list_text_left_margin"
        android:layout_marginStart="@dimen/list_text_left_margin" />

</RelativeLayout>